<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    {{!-- Font Awesome Icons --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    {{!-- Custon CSS --}}
    <link rel="stylesheet" href="/css/style.css">

    <title>Title of Proj</title>
</head>

<body>

    {{#if user}}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand ms-2" href="#">BRAND HERE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar"
                aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav me-auto ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-center d-flex flex-column" aria-current="page" href="/orders">
                            <i class="fa-solid fa-box-archive"></i>
                            Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center d-flex flex-column" href="/products">
                            <i class="fa-solid fa-list"></i>
                            Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center d-flex flex-column" href="#">
                            <i class="fa-solid fa-user-gear"></i>
                            Users
                        </a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <span class="mx-2">Hi, {{user.firstName}} {{user.lastName}}</span>
                <a href="/admin/logout" class="btn btn-outline-dark btn-sm">Logout</a>
            </div>
        </div>
    </nav>
    {{else}}
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand me-auto ms-auto" href="#">BRAND HERE</a>
        </div>
    </nav>
    {{/if}}

    {{#if success_messages}}
    {{#each success_messages}}
    <div class="container my-3">
        <div class="alert alert-success">
            {{this}}
        </div>
    </div>
    {{/each}}
    {{/if}}

    {{#if error_messages}}
    {{#each error_messages}}
    <div class="container my-3">
        <div class="alert alert-danger">
            {{this}}
        </div>
    </div>
    {{/each}}
    {{/if}}

    {{#block 'content'}}
    {{/block}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    {{#block 'js'}}
    {{/block}}

</body>

</html>