{{#extends 'base'}}
{{#block 'content'}}
<h1>Deleting {{product.product_name}}</h1>
<form method="POST">
    <div class="alert alert-danger">
        <p>Are you sure you want to delete {{product.product_name}}</p>
        <input type="submit" class="btn btn-danger my-3" value="Yes">
        <a href="/products" class="btn btn-success">No</a>
    </div>
</form>
{{/block}}
{{/extends}}